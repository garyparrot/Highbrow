<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Highbrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="highlightColor">@color/notice_300</item>
        <item name="lineSeparator">#dddddd</item>
        <item name="surfaceBox">#dddddd</item>

        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabTextColor">@color/purple_500</item>
        <item name="tabTextColorNotHighlight">@color/purple_500</item>
        <item name="decorationTextColor">#555555</item>

        <item name="itemOn">@color/purple_500</item>
        <item name="itemUnsure">@color/purple_200</item>
        <item name="itemOff">#bbbbbb</item>

        <item name="cardHeaderBackgroundColor">#dddddd</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>